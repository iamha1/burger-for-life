<div class="container">
  <div class="row holderDiv">
   {{!-- <h1> BURGER FOR LIFE </h1>  --}}
  </div>
  <div class="row">
    <div class='col-6'>  
<h2>&nbsp; &nbsp; &nbsp;Choose your Burger!</h2>

<ul>
  {{#each burgers}}

    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class='col-6'>
<h2>&nbsp; &nbsp; &nbsp; Burgers Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

&nbsp; &nbsp; &nbsp;
&nbsp; &nbsp; &nbsp;


<h2> Add a Burger</h2>
<form class="create-form">
   <div class='col-6'>  
  <div class="form-group">
    <label for="burgerName">Burger Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>
</div>
</div>

